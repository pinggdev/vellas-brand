<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- vellas.produk tree view -->
    <record id="vellas_produk_view_tree" model="ir.ui.view">
        <field name="name">Produk Vellas</field>
        <field name="model">vellas.produk</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="kode_produk"/>
                <field name="name"/>
                <field name="harga"/>
                <field name="stok"/>
                <field name="satuan"/>
                <field name="supplier_id"/>
            </tree>
        </field>
    </record>

    <!-- vellas.produk form view -->
    <record id="vellas_produk_view_form" model="ir.ui.view">
        <field name="name">Form Produk Vellas</field>
        <field name="model">vellas.produk</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="kode_produk"/>
                        <field name="name"/>
                        <field name="harga"/>
                        <field name="stok"/>
                        <field name="satuan"/>
                        <field name="supplier_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- vellas.produk action window -->
    <record id="vellas_produk_action" model="ir.actions.act_window">
        <field name="name">Daftar Produk Vellas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vellas.produk</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="vellas_produk_menu_act" name="Produk" parent="vellas_akomodasi_menu_categ" action="vellas_produk_action" sequence="20"/>

</odoo>
