<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- vellas.supplier tree view -->
    <record id="vellas_supplier_view_tree" model="ir.ui.view">
        <field name="name">Supplier Vellas</field>
        <field name="model">vellas.supplier</field>
        <field name="arch" type="xml">
            <tree>
                <!-- Add your fields here -->
                <field name="name"/>
                <field name="barang_supplier"/>
                <field name="telpon"/>
                <field name="alamat"/>
            </tree>
        </field>
    </record>

    <!-- vellas.supplier form view -->
    <record id="vellas_supplier_view_form" model="ir.ui.view">
        <field name="name">Form Supplier Vellas</field>
        <field name="model">vellas.supplier</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <!-- Add your fields here -->
                        <field name="name"/>
                        <field name="barang_supplier"/>
                        <field name="telpon"/>
                        <field name="alamat"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- vellas.supplier action window -->
    <record id="vellas_supplier_action" model="ir.actions.act_window">
        <field name="name">Daftar Supplier Vellas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vellas.supplier</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="vellas_supplier_menu_act" name="Supplier" parent="vellas_akomodasi_menu_categ" action="vellas_supplier_action" sequence="10"/>

</odoo>
